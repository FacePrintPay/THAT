from flask import Flask, request, jsonify
import os

app = Flask(__name__)

@app.route('/chatlog', methods=['POST'])
def receive_chatlog():
    data = request.get_json()
    with open("chat_history.json", "a") as f:
        f.write(f"{data}\n")
    return jsonify({"status": "received"}), 200

if __name__ == "__main__":
